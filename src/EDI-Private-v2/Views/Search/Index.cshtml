                <div id="searchSeries">
                    <div class="roundedBox">
                        <div class="wwwText"><strong>Search in SERIES:</strong></div>
                        <div class="search-default-group">
                            @Html.DropDownList("series_search_default_key", ViewData["seriesKeys"] as SelectList, new { @class = "search-dropdown" })
                            <input type="text" size="50" height="30" title="series search term default" name="series_search_default_term" id="series_search_default_term" />
                        </div>
                        <div class="input-group series_search">
                            @Html.DropDownList("series_search_operator_1", ViewData["cmp"] as SelectList, new { @class = "search-key-dropdown" })
                            <div class="input-group">
                                @Html.DropDownList("series_search_key_1", ViewData["seriesKeys"] as SelectList, new { @class = "search-dropdown" })
                                <input type="text" size="50" height="30" title="series search term 1" name="series_search_term_1" id="series_search_term_1" />
                            </div>
                        </div>
                        <div class="control-btn-group">
                            <button id="addNewSeriesField" title="Add field" class="btn addFieldBtn">Add Field</button>
                            <button id="removeSeriesField" title="Remove a field" class="btn removeFieldBtn">Remove Field</button>
                        </div>
                        <div class="control-btn-group">
                            <button id="searchSeriesBtn" title="Search inventory" class="btnSearch advanceSearchBtn" style="font-family: 'Open Sans',sans-serif !important; font-size: 1em;">SEARCH</button>
