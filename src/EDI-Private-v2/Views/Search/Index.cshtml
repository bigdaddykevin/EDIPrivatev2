@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.showAdvanced = true;
    ViewBag.showHelp = false;
}

<div id="ajaxSearchWait"></div>
<div class="containerSearch">
    <div id="divSearch">
        <div class="message" id="emptySearchMessage" style="width: 300px;display:none;">Please enter a search term in the text box located on the upper right-hand corner of the toolbar.</div>
