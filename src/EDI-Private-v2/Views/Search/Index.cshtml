            <div id="searchTabs">
                <ul>
                    <li id="searchtabseries"><a href="#searchSeries">SERIES</a></li>
                    <li id="searchtabstudy"><a href="#searchStudy">STUDY</a></li>
                    <li id="searchtabcollection"><a href="#searchCollection">COLLECTION</a></li>
